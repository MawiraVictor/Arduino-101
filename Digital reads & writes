
int led = 13; // var led  declaration
int button = 1; // var button declaration

void setup() {
  pinMode(led, OUTPUT); //digital writing pin 13
  pinMode(button, INPUT); // digital writing pin 1
}

void loop() {
  delay(1000); // 1 sec delay ( in ms )
  digitalWrite(led, HIGH);
  delay(1000); // the led waits for 1000 ms then  TURNS off

}
